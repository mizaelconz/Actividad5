<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="378dp"
        android:layout_height="126dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/huevorojo"
                android:layout_width="223dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/huevoRojo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomUNO"
                    android:layout_width="201dp"
                    android:layout_height="34dp"
                    android:text="Orlando Misael"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/apeUNO"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="Islas Perez"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/edadUNO"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="19 años"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="378dp"
        android:layout_height="126dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/huevoAzul"
                android:layout_width="223dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/huevoMorado" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomDOS"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="Consuelo"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/apeDOS"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="Velazquez Montemayor"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/edadDOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="19 años"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/huevoAmarillo"
                android:layout_width="225dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/huevoAmarillo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomTRES"
                    android:layout_width="188dp"
                    android:layout_height="34dp"
                    android:text="Carlos Eli"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/apeTRES"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="López Tellez"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/edadTRES"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="20 años"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Morado"
                android:layout_width="228dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/huevoAzul" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomCUATRO"
                    android:layout_width="185dp"
                    android:layout_height="34dp"
                    android:text="Giancarlos "
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/apeCUATRO"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="Garza Barron"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/edadCUATRO"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="20 años"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
